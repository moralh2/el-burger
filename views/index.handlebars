<div class="container">
    <div class="row justify-content-center text-center mt-2 mb-4">
        <h2 class="col-12">You can eat (DEVOUR) one of the burgers below...</h2>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center mb-2">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/fresh-burger-block devour=true}}
        {{/unless}}
        {{/each}}
    </div>
</div>

<hr style="width: 50%; color: black; height: 1px; background-color:black;" />

<div class="container">
    <div class="row justify-content-center text-center mt-2 mb-4">
        <h3 class="col-12">...or see all the burgers you ate already...</h3>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center mb-2">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/old-burger-block devour=false}}
        {{/if}}
        {{/each}}
    </div>
</div>

<hr style="width: 50%; color: black; height: 1px; background-color:black;" />

<div class="container">
    <div class="row justify-content-center text-center mt-3 mb-4">
        <h1 class="col-12">...or enter your own burger</h1>
        <form class="post-burger col-8">
            <div class="form-group">
                <label for="burgerName">Burger Name</label>
                <input type="text" class="form-control" id="burgerName" aria-describedby="newBurgerEntry" placeholder="Enter name of new burger">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>