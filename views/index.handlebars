<div class="container">
    <div class="row justify-content-center text-center">
        <h1 class="col-12">All of the Burgers</h1>
        <h3 class="col-12">Choose which burger you wish to DEVOUR</h3>
    </div>
</div>




<div class="container">
    <div class="row">

        {{#each burgers}}

        <div class="card w-25">
            <div class="card-body">
                <h5 class="card-title">{{id}}: {{name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Devoured: {{devoured}}</h6>
                <a href="#" class="card-link">Eat Me!</a>
            </div>
        </div>

        {{/each}}
    </div>

</div>




