<div class="container">
    <div class="row justify-content-center text-center">
        <h1 class="col-12">Choose which burger you wish to DEVOUR</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/fresh-burger-block devour=true}}
        {{/unless}}
        {{/each}}
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center">
        <h1 class="col-12">You ate these already!</h1>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/old-burger-block devour=false}}
        {{/if}}
        {{/each}}
    </div>
</div>

<div class="container">
    <div class="row justify-content-center text-center">
        <h1 class="col-12">Enter your own burger</h1>
        <form class="post-burger col-8">
            <div class="form-group">
                <label for="burgerName">Burger Name</label>
                <input type="text" class="form-control" id="burgerName" aria-describedby="newBurgerEntry" placeholder="Enter name of new burger">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>